<%- include('partials/_header') %> <!--Importa el layout header desde partials-->

<div class="container rounded p-3 formadm">

    <!--Formulario-->
    <div class="row g-3 mb-3 col-md-12">
                    <form action="/add" method="POST">
                        <div class="col-md-6">
                            <input type="text" name="nombre" placeholder="Nombre mascota" class="form-control my-1">
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="raza" placeholder="Raza" class="form-control my-1">
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="edad" placeholder="Edad" class="form-control my-1">
                        </div>
                        <div class="col-md-6">
                            <input type="text" name="foto" placeholder="Url Imagen" class="form-control my-1">
                        </div>
                        <div class="col-md-6">
                            <textarea name="perfil" cols="80" placeholder="Perfil" class="form-control my-1"></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary my-2">
                               Agregar 
                        </button>
                    </form>
        

        
            <!--Tabla de mascotas-->
        
            <table class="table table-bordered table-hover p-2 align-middle">
                <thead>
                    <tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">Nombre</th>
                        <th class="text-center">Raza</th>
                        <th class="text-center">Edad</th>
                        <th class="text-center">Imagen</th>
                        <th class="text-center">Perfil</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (var i = 0; i < tasks.length ; i++) { %>
                        <tr>
                            <td><%= i+1 %></td>
                            <td><%= tasks[i].nombre %></td>
                            <td><%= tasks[i].raza %></td>
                            <td class="text-center"><%= tasks[i].edad %></td>
                            <td><a href="<%= tasks[i].foto %>" target="blank"><img class="rounded mx-auto d-block" src="<%= tasks[i].foto %>" width="120"></a></td>
                            <td><%= tasks[i].perfil %></td>
                            <td>
                                <a class="btn <%= tasks[i].status ? 'btn-warning' : 'btn-success' %>" 
                                    href="/turn/<%= tasks[i]._id %>">
                                    <%= tasks[i].status ? 'Adoptado' : 'Disponible' %></a>
                                <a class="btn" href="/edit/<%= tasks[i]._id %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-edit" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#00b341" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <path d="M9 7h-3a2 2 0 0 0 -2 2v9a2 2 0 0 0 2 2h9a2 2 0 0 0 2 -2v-3" />
                                        <path d="M9 15h3l8.5 -8.5a1.5 1.5 0 0 0 -3 -3l-8.5 8.5v3" />
                                        <line x1="16" y1="5" x2="19" y2="8" />
                                      </svg>                                
                                </a>
                                <a class="btn" href="/delete/<%= tasks[i]._id %>">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="icon icon-tabler icon-tabler-trash" width="44" height="44" viewBox="0 0 24 24" stroke-width="1.5" stroke="#ff4500" fill="none" stroke-linecap="round" stroke-linejoin="round">
                                        <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                                        <line x1="4" y1="7" x2="20" y2="7" />
                                        <line x1="10" y1="11" x2="10" y2="17" />
                                        <line x1="14" y1="11" x2="14" y2="17" />
                                        <path d="M5 7l1 12a2 2 0 0 0 2 2h8a2 2 0 0 0 2 -2l1 -12" />
                                        <path d="M9 7v-3a1 1 0 0 1 1 -1h4a1 1 0 0 1 1 1v3" />
                                      </svg>
                                </a>
                            </td>
                        </tr>
                        
                    <%}%>
                </tbody>

            </table>
        </div>
    </div>

</div>
<%- include('partials/_footer') %> <!--Importa el layout footer desde partials-->